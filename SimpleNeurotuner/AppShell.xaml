<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimpleNeurotuner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SimpleNeurotuner"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">
    <TabBar>
    <ShellContent
        Title="{local:Localize TabBarMainPage}"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="{local:Localize TabBarRecorderPage}"
        ContentTemplate="{DataTemplate local:RecorderPage}"
        Route="RecordPage" />
    <ShellContent
        Title="{local:Localize TabBarAboutNeurotuner}"
        ContentTemplate="{DataTemplate local:AboutNeurotuner}"
        Route="AboutNeurotuner" />
    </TabBar>
    
</Shell>

